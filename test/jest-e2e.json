{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "@",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "modulePaths": ["<rootDir>", "<rootDir>/src"],
  "testMatch": [
    "**/test/**/*.spec.ts"
  ],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleDirectories": ["node_modules", "."],
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "roots": [
    "<rootDir>/src",
    "<rootDir>/test"
  ]
}
